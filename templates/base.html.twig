<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('img/glider.svg') }}">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <header class="site-header" style="background-image: url({{ asset('img/background.jpg') }})">
            <span class="title">My Symfony Site</span>
        </header>
        <nav class="navbar">
            <ul>
                <li><a href="{{ path('home') }}">Home</a></li>
                <li><a href="{{ path('about') }}">About</a></li>
                <li><a href="{{ path('report') }}">Report</a></li>
                <li><a href="{{ path('lucky') }}">Lucky</a></li>
                <li><a href="{{ path('session') }}">Session</a></li>
                <li><a href="{{ path('card') }}">Card</a></li>
            </ul>
        </nav>
        <main>
        {% block body %}{% endblock %}
        </main>

        <footer class="footer">
            {% block footer %}
            <p class="social">
                &copy; 2025 Daud Nawaz
            </p>
            <p class="social">
                Some footer text
            </p>
            {% endblock %}
        </footer>
    </body>
</html>
